@model IEnumerable<MortgageCalculator.Dto.Mortgage>

@{
    ViewBag.Title = "Home Page";
}



<style>
    table {
        width: 100%;
    }

        table tr td {
            border: 2px solid black;
            text-align: center;
            word-wrap: break-word;
        }

        table tr th {
            border: 2px solid black;
            text-align: center;
            background-color: #fff;
            color: #000;
        }
</style>


<div class="jumbotron">
    <h1>Mortgage Calculator</h1>
    <p class="lead">
        The Mortgage Calculator helps you:
        <ul>
            <li>Choose the right loan for you</li>
            <li>The Interests and Repayment on your loan</li>
        </ul>
    </p>
</div>


<div class="row">
    <div class="col-md-12">

        @Html.Partial("Partial/CalculateMortgage", Model.FirstOrDefault());
    </div>
</div>


<h2>Mortgage List</h2>


<table>
    <tr>
        <th>
            @Html.Label("Mortgage Name")
        </th>
        <th>
            @Html.Label("Mortgage Type")
        </th>
        <th>
            @Html.Label("Interest Repayment")
        </th>
        <th>
            @Html.Label("Effective Start Date")
        </th>
        <th>
            @Html.Label("Effective End Date")
        </th>
        <th>
            @Html.Label("Cancellation Fee")
        </th>
        <th>
            @Html.Label("Establishment Fee")
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MortgageType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterestRepayment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CancellationFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstablishmentFee)
            </td>
        </tr>
    }
</table>
<br />
